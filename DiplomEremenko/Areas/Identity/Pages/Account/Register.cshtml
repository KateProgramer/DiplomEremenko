@page
@model RegisterModel
@{
   ViewData["Title"] = "РЕГИСТРАЦИЯ";
}



<div class="row" style="margin-top: 10%; margin-left:35%">
    <div class="col-md-6" >
        <form id="registerForm"  asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h1  align="center">@ViewData["Title"]</h1>
            <h2> <font size="4" face="Arial"> <p align="center">Создать нового пользователя</p></font></h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control shadow-lg p-3 mb-1 bg-white rounded" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control shadow-lg p-3 mb-1 bg-white rounded" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="form-control shadow-lg p-3 mb-1 bg-white rounded" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <br/>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg text-white" style="background-color:black">ЗАРЕГИСТРИРОВАТЬСЯ</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
